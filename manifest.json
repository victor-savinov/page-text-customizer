{
    "manifest_version": 2,
    "name": "Regex Replace",
    "version": "1.0",
    "browser_action": {
        "default_popup": "index.html"
    },

    "content_scripts": [{
        "all_frames": true,
        "js": [
            "content-scripts.js"
        ],
        "matches": [
            "*://*/*"
        ],
        "run_at": "document_start"
    }],
    "permissions": [
        "<all_urls>",
        "storage"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "linux": "Ctrl+Shift+F",
                "mac": "Command+Shift+F",
                "windows": "Ctrl+Shift+F",
                "chromeos": "Ctrl+Shift+F"
            }
        }
    }
}